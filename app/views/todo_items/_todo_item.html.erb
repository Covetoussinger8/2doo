<div class="row clearfix">
    <% if todo_item.completed? %>
        <div style=" white-space: nowrap; ">
            <div style=" display: inline-block; ">
                <div class="trash">
                    <%= button_to "X", todo_list_todo_item_path(@todo_list, todo_item.id), class: "btn btn-outline-secondary mr-3", method: :delete, data: { confirm: "VocÃª realmente deseja excluir essa tarefa?" } %>
                </div>
            </div>
            <div style=" display: inline-block; ">
                <div class="todo_item">
                    <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
                </div>
            </div>
        </div>
    <% else %>
        <div style=" white-space: nowrap; ">
            <div style=" display: inline-block; ">
                <div class="complete">
                    <%= button_to "V", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch, class: "btn btn-outline-secondary mr-3" %>
                </div>
            </div>
            <div style=" display: inline-block; ">
                <div class="todo_item">
                    <p><%= todo_item.content %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>