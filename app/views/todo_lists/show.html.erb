<p style="color: green"><%= notice %></p>


<p>
  <strong>Título:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @todo_list.description %>
</p><br>

<div id="todo_items_wrapper">
  <%= render @todo_list.todo_items %>
  <div id="form">
    <%= render "todo_items/form" %>
  </div>
</div>

<div class="mt-3 mb-3">
  <%= link_to "Editar lista", edit_todo_list_path(@todo_list), class: "btn btn-primary" %>
</div>
<div class="mt-3 mb-3">
  <%= button_to "Excluir lista", todo_list_path(@todo_list), method: :delete, data: { confirm: "Você realmente deseja excluir essa lista To-do?" }, class: "btn btn-primary" %>
</div>
<div class="mt-3 mb-3">
  <%= link_to "Voltar", todo_lists_path, class: "btn btn-primary" %>
</div>