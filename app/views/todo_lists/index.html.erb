<p style="color: green"><%= notice %></p>

<h1>Listas To-do</h1>

<div id="todo_lists">
  <% @todo_lists.each do |todo_list| %>
    <%= render todo_list %>
    <p>
      <%= link_to "Vizualizar esta lista To-do", todo_list %>
    </p>
  <% end %>
</div>

<div class="mt-3">
  <%= button_to "Criar nova lista", new_todo_list_path, class: "btn btn-primary", method: :get %>
</div>
