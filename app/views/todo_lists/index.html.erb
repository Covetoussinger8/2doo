<p style="color: green"><%= notice %></p>

<div style=" white-space: nowrap; ">
  <div style=" display: inline-block; ">
    <h1>Listas To-do</h1>
  </div>
  <div style=" display: inline-block; float: right; ", class="ms-auto mb-3">
    <%= button_to "Criar nova lista", new_todo_list_path, class: "btn btn-primary", method: :get %>
  </div>
</div>


<div id="todo_lists">
  <table class="table table-striped table-success table-bordered">
    <thead>
      <tr>
        <th scope="col"><strong>Título</strong></th>
        <th scope="col"><strong>Descrição</strong></th>
      </tr>
    </thead>
    <tbody>
      <% @todo_lists.each do |todo_list| %>
        <%= render todo_list %>
      <% end %>
    </tbody>
  </table>

</div>